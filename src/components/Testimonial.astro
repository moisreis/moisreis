---
import {Image} from "astro:assets";

import Avatar from "./Avatar.astro"

const avatar = Astro.props.avatar;
const name = Astro.props.name;
const position = Astro.props.position;
const text = Astro.props.text;
---

<!-- @component START: Testimonial -->
<div class="flex flex-col justify-start items-start p-6 outline-3 bg-white outline-black outline-dashed rounded-2xl boxShadow first:-rotate-6 rotate-animation">
    <Avatar src={avatar} alt={name} />
    <h2 class="font-display text-base font-medium">{name}</h2>
    <span class="font-display text-base font-light">{position}</span>
    <p class="font-sans text-base text-muted leading-relaxed mt-3">{text}</p>
</div>

<style>
    .boxShadow {
        box-shadow: var(--shadow-card) var(--color-secondary);
    }
</style>