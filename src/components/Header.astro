---
import Button from "./Button.astro"
import Avatar from "./Avatar.astro"

import Moises from "../assets/avatar.jpg"
---

<!-- @component START: Header -->
<header class="flex flex-row justify-between w-full py-6">
    <div class="flex flex-col justify-start items-start">
        <Avatar src={Moises} alt="Moisés Reis" />
        <h2 class="font-display text-sm font-medium mb-1">Moisés Moreira Reis</h2>
        <span class="font-display text-sm text-body mb-1">Bahia, Brasil</span>
        <span class="font-display text-sm text-body">Bacharel em Engenharia de Software, UNINTER</span>
    </div>
    <div class="flex flex-col justify-end items-end gap-3">
        <Button title="fale comigo" variant="primary"/>
        <Button title="sobre mim" variant="link"/>
        <Button title="meu trabalho" variant="link"/>
    </div>
</header>
