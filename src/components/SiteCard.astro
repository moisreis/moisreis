---
const title = Astro.props.title;
const bg = Astro.props.bg;
const text = Astro.props.text;
const techs = Astro.props.techs;

import Badge from "./Badge.astro";

import {Image} from "astro:assets";
---

<!-- @component START: ServiceCard -->
<div class="p-6 outline-3 bg-white outline-secondary outline-dashed rounded-2xl relative boxShadow">
    <h3 class="text-lg font-display font-medium mb-3">{title}</h3>
    <p class="text-base text-muted mb-6">{text}</p>
    <Image src={bg} alt="Background" class="w-full object-contain h-fit border border-border mb-1.5 rounded-xl"/>
</div>

<style>
    .boxShadow {
        box-shadow: 12px 12px 0px #FFF100;
    }
</style>