---
const { title, variant = "primary", size = "normal" } = Astro.props;

const base = "flex flex-row px-3 py-1.5 font-display text-sm font-medium w-fit";

const variants = {
    primary: "bg-primary text-background",
    secondary: "bg-secondary text-body",
    link: "bg-transparent text-body hover:underline",
    tertiary: "bg-tertiary text-body border-2 border-secondary",
};

const sizes = {
    normal: "px-3 py-1.5",
    large: "px-6 py-3",
};

const styles = `${base} ${variants[variant] || variants["primary"]} ${sizes[size] || sizes["normal"]}`;
---

<!-- @component START: Button -->
<button class={styles}>{title}</button>